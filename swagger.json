{
  "openapi": "3.0.3",
  "info": {
    "title": "Eco API",
    "version": "1.0.0",
    "description": "Documentação da API ECO."
  },
  "servers": [{ "url": "http://localhost:4000" }],
  "tags": [
    { "name": "Auth", "description": "Autenticação e registro" },
    { "name": "Eco", "description": "Ecos (posts)" },
    { "name": "Sussurro", "description": "Sussurros (comentários)" },
    { "name": "Tag", "description": "Tags" },
    { "name": "Perfil", "description": "Perfil do usuário" }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Eco": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "user_id": { "type": "string", "format": "uuid" },
          "thread_1": { "type": "string" },
          "thread_2": { "type": "string", "nullable": true },
          "thread_3": { "type": "string", "nullable": true },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" },
          "tags": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Tag" }
          }
        }
      },
      "Sussurro": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "eco_id": { "type": "string", "format": "uuid" },
          "user_id": { "type": "string", "format": "uuid" },
          "conteudo": { "type": "string" },
          "created_at": { "type": "string", "format": "date-time" },
          "codinome": { "type": "string" },
          "avatar_url": { "type": "string" }
        }
      },
      "Tag": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "nome": { "type": "string" }
        }
      },
      "UserRegister": {
        "type": "object",
        "properties": {
          "email": { "type": "string", "format": "email" },
          "senha": { "type": "string" },
          "codinome": { "type": "string" },
          "genero": { "type": "string", "enum": ["M", "F", "O"] },
          "avatar_url": { "type": "string", "format": "uri" }
        },
        "required": ["email", "senha", "codinome", "genero", "avatar_url"]
      },
      "UserLogin": {
        "type": "object",
        "properties": {
          "email": { "type": "string", "format": "email" },
          "senha": { "type": "string" }
        },
        "required": ["email", "senha"]
      }
    }
  },
  "paths": {
    "/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Registrar novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserRegister" },
              "example": {
                "email": "exemplo@email.com",
                "senha": "123456",
                "codinome": "usuario_eco",
                "genero": "O",
                "avatar_url": "https://eco-avatars.s3.sa-east-1.amazonaws.com/eco-avatars/mulher2-eco.png"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário registrado com sucesso"
          },
          "400": { "description": "Erro de validação" },
          "409": { "description": "Usuário já existe" }
        }
      }
    },
    "/auth": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login do usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserLogin" },
              "example": {
                "email": "exemplo@email.com",
                "senha": "123456"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login realizado com sucesso" },
          "401": { "description": "Usuário ou senha inválidos" }
        }
      }
    },
    "/logout": {
      "post": {
        "tags": ["Auth"],
        "summary": "Logout do usuário (remove cookie JWT)",
        "responses": {
          "200": { "description": "Logout realizado com sucesso" }
        }
      }
    },
    "/eco": {
      "get": {
        "tags": ["Eco"],
        "summary": "Listar ecos",
        "responses": {
          "200": {
            "description": "Lista de ecos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ecos": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Eco" }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Eco"],
        "summary": "Criar novo eco",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "thread_1": { "type": "string" },
                  "thread_2": { "type": "string" },
                  "thread_3": { "type": "string" },
                  "tag_ids": {
                    "type": "array",
                    "items": { "type": "string", "format": "uuid" }
                  }
                },
                "required": ["thread_1", "tag_ids"]
              },
              "example": {
                "thread_1": "Texto com pelo menos 100 caracteres...",
                "thread_2": "Texto opcional",
                "thread_3": "Texto opcional",
                "tag_ids": ["uuid-tag-1", "uuid-tag-2"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Eco criado com sucesso" },
          "400": { "description": "Erro de validação" },
          "401": { "description": "Não autenticado" }
        }
      }
    },
    "/eco/{id}": {
      "get": {
        "tags": ["Eco"],
        "summary": "Detalhar eco",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": { "description": "Eco detalhado" },
          "404": { "description": "Eco não encontrado" }
        }
      },
      "patch": {
        "tags": ["Eco"],
        "summary": "Atualizar eco",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "thread_1": { "type": "string" },
                  "thread_2": { "type": "string" },
                  "thread_3": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Eco atualizado com sucesso" },
          "400": { "description": "Erro de validação" },
          "401": { "description": "Não autenticado" },
          "404": { "description": "Eco não encontrado" }
        }
      },
      "delete": {
        "tags": ["Eco"],
        "summary": "Deletar eco",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": { "description": "Eco deletado com sucesso" },
          "401": { "description": "Não autenticado" },
          "404": { "description": "Eco não encontrado" }
        }
      }
    },
    "/sussurro": {
      "get": {
        "tags": ["Sussurro"],
        "summary": "Listar sussurros",
        "parameters": [
          {
            "name": "eco_id",
            "in": "query",
            "required": false,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de sussurros",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "sussurros": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Sussurro" }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Sussurro"],
        "summary": "Criar sussurro",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "eco_id": { "type": "string", "format": "uuid" },
                  "conteudo": { "type": "string" }
                },
                "required": ["eco_id", "conteudo"]
              },
              "example": {
                "eco_id": "uuid-do-eco",
                "conteudo": "Comentário do sussurro."
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Comentário criado com sucesso" },
          "400": { "description": "Erro de validação" },
          "401": { "description": "Não autenticado" }
        }
      }
    },
    "/sussurro/{id}": {
      "patch": {
        "tags": ["Sussurro"],
        "summary": "Atualizar sussurro",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "conteudo": { "type": "string" }
                },
                "required": ["conteudo"]
              },
              "example": {
                "conteudo": "Novo conteúdo do sussurro."
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Comentário atualizado com sucesso" },
          "400": { "description": "Erro de validação" },
          "401": { "description": "Não autenticado" },
          "404": { "description": "Comentário não encontrado" }
        }
      },
      "delete": {
        "tags": ["Sussurro"],
        "summary": "Deletar sussurro",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": { "description": "Comentário deletado com sucesso" },
          "401": { "description": "Não autenticado" },
          "404": { "description": "Comentário não encontrado" }
        }
      }
    },
    "/tags": {
      "get": {
        "tags": ["Tag"],
        "summary": "Listar tags",
        "responses": {
          "200": {
            "description": "Lista de tags",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "tags": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Tag" }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Tag"],
        "summary": "Criar tag",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": { "type": "string" }
                },
                "required": ["nome"]
              },
              "example": {
                "nome": "Saúde Mental"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Tag criada!" },
          "400": { "description": "Nome de tag inválido" },
          "409": { "description": "Tag já cadastrada" }
        }
      }
    },
    "/profile": {
      "get": {
        "tags": ["Perfil"],
        "summary": "Ver dados do usuário autenticado",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Dados do usuário autenticado" },
          "401": { "description": "Não autenticado" }
        }
      }
    }
  }
}
